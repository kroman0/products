input.hidden-field {
	/* Radio buttons try to use Plone's default text input 
	   field CSS properties, like borders and background shade image */
	background: #eeeeff none repeat scroll 0 0;
	color: black;
}

input.not-changed-title-field {
        color: gray;
}

input.changed-title-field {
        color: black;
}


/*  ___Start__ Hover functionality */
.ArchetypesReferenceDataGridWidget table.datagridwidget-table-edit td.datagridwidget-manipulator {
    visibility: hidden;
/*    background-color: &dtml-backgroundColor;*/
}

*html .ArchetypesReferenceDataGridWidget table.datagridwidget-table-edit td.datagridwidget-manipulator {
    visibility: visible;
}

.ArchetypesReferenceDataGridWidget table.datagridwidget-table-edit tr:hover td.datagridwidget-manipulator {
    visibility: visible;
}
/*  ___END__ Hover functionality */
 


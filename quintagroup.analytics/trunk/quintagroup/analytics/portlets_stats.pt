<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/prefs_main_template/macros/master">

<metal:main metal:fill-slot="prefs_configlet_main"
            i18n:domain="quintagroup.analytics"
            tal:define="infos view/getPropsList">
    <body>
        <div id="wrapper">
            <h1>Properties stats</h1>
            <div id="navigation">
                <a href="@@ownership_by_type">Ownership by type</a> |
                <a href="@@ownership_by_state">Ownership by state</a> |
                <a href="@@type_by_state">Types by state</a> |
                <a href="@@legacy_portlets">Legacy portlets</a> |
                <a href="@@properties_stats">Properties stats</a> |
                <a class="current" href="@@portlets_stats">Portlets stats</a>
            </div>
            <form action="" method="get">
                Walk through site up to this level (type -1 for no limits):
                <input type="text" name="level" size="5" value="1" tal:attributes="value request/level|python:1" />
                <input type="submit" name="submit" value="Submit" />
            </form>
        </div>
        <div>
             <span tal:repeat="prop view/proplist">
                 <span tal:replace="prop"/>,
             </span>
             <hr>
        </div>
        <div tal:condition="request/csv|nothing">
            <nobr>path,<span tal:replace="view/propname" /></nobr><br/>
            <nobr tal:repeat="info infos">
                <span tal:replace="info/path">path</span>,
                <span tal:condition="info/slots">"
                    <span tal:condition="python:not isinstance(info['slots'],basestring)" tal:repeat="slot info/slots">
                        <span tal:replace="slot" />;
                    </span>
                    <span tal:condition="python:isinstance(info['slots'],basestring)" tal:replace="info/slots">string</span>"
                </span>
                <span tal:condition="python:info['slots'] is None">None</span>
                <br/>
            </nobr>
        </div>
        <table class="listing" tal:condition="not:request/csv|nothing">
            <tr>
                <th></th>
                <th>left_slots</th>
                <th>right_slots</th>
            </tr>
            <tr tal:repeat="info view/getPropsList">
                <th>
                    <a href="#"
                       tal:content="info/path"
                       tal:attributes="href string:${info/href}/@@manage-portlets">path</a>
                </th>
                <td>
                    <ul tal:condition="info/left_slots">
                        <li tal:repeat="slot info/left_slots">
                            <span tal:condition="python:slot['editview'] is ''"
                                  tal:content="slot/title"></span>
                            <a tal:condition="python:slot['editview'] is not ''"
                               tal:content="slot/title"
                               tal:attributes="href string:${slot/editview};
                                               title slot/title">title</a>
                        </li>
                    </ul>
                    <span tal:condition="python:info['left_slots'] is None">doesn't exist</span>
                </td>
                <td>
                    <ul tal:condition="info/right_slots">
                        <li tal:repeat="slot info/right_slots">
                            <span tal:condition="python:slot['editview'] is ''"
                                  tal:content="slot/title"></span>
                            <a tal:condition="python:slot['editview'] is not ''"
                               tal:content="slot/title"
                               tal:attributes="href string:${slot/editview};
                                               title slot/title">title</a>
                        </li>
                    </ul>
                    <span tal:condition="python:info['right_slots'] is None">doesn't exist</span>
                </td>
            </tr>
            <tr>
                <th>Total</th>
                <td colspan="2" tal:content="view/getTotal">123</td>
            </tr>
        </table>
    </body>
  </metal:main>
</html>

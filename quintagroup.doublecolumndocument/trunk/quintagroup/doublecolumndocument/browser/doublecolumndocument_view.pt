<html xmlns="http://www.w3.org/1999/xhtml"
      xml:lang="en-US" lang="en-US"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="quintagroup.doublecolumndocument">

<body>

<metal:main fill-slot="main">
    <tal:main-macro metal:define-macro="main">
        <div tal:replace="structure provider:plone.abovecontenttitle" />

        <h1 class="documentFirstHeading" tal:content="here/title_or_id">Title</h1>

        <div tal:replace="structure provider:plone.belowcontenttitle" />
        <div tal:replace="structure provider:plone.abovecontentbody" />

        <div class="documentDescription" tal:content="context/description" />

        <div class="body1"
             tal:define="body1 here/body1"
             tal:condition="body1"
             tal:content="structure body1">Body 1</div>

        <div class="body2"
             tal:define="body2 here/body2;"
             tal:condition="body2"
             tal:content="structure body2">Body 2</div>

        <div class="visualClear" id="clear-after-doublecolumn-document"><!-- --></div>

        <div tal:replace="structure provider:plone.belowcontentbody" />

    </tal:main-macro>
</metal:main>

</body>
</html>
